<div class="container" >
  <h2>Your Booking</h2>
  <%@passengers.each do |passenger| %>
  <div class="card" style="width: 50rem;color:#F8F8F7;background-color:#6D6D89;margin:10px;padding:10px;">

    <h3>Name : <%= passenger.name %></h3>
    <h3>Email : <%= passenger.email %></h3>
    <div class="card-body">
    <h3>Flight details</h3>
    <table>
      <tbody>
        <tr>
          <th>Departure airport : </th>
          <td><%= @flight.departure_airport.name %></td>
        </tr>
        <tr>
          <th>Arrival airport : </th>
          <td><%= @flight.arrival_airport.name %></td>
        </tr>
        <tr>
          <th>Start datetime : </th>
          <td><%= @flight.start_date.strftime('%B %d, %Y %H:%M') %></td>
        </tr>
        <tr>
          <th>Duration : </th>
          <td><%= @flight.duration %></td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>

  <%end%>
</div>
